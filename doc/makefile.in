topdir = @top_srcdir@

PDF = UserManual.pdf

all : $(PDF)

.PHONY : clean

%.pdf : %.ps
	ps2pdf $<

%.ps : %.dvi
	dvips -o $@ $<

%.dvi : %.tex makefile
	latex $<
	latex $<

clear: 
	rm -f *.dvi *.log *.toc *.aux *.ps *.pdf

makefile: makefile.in  $(topdir)/config.status
	cd $(top_builddir) \
	  && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= $(SHELL) ./config.status


#### some additional dependencies
UserManual.dvi : TitlePage.tex Executables.tex
