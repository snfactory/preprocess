dnl ######################################################################
dnl ## Filename:      configure.in
dnl ## Version:       1.0
dnl ## Description:   autoconf makefile
dnl ## Author:        $Author$
dnl ## Created at:    $Date$
dnl ######################################################################

dnl Process this file with autoconf to produce a configure script.
dnl Variables to be edited to meet your needs: AC_INIT, AM_INIT_AUTOMAKE
dnl and AC_OUTPUT. You should not have to edit the rest of the file.

dnl A source file from your development tree
AC_INIT(pkg/preprocess/source/preprocess.cxx)

AC_CANONICAL_SYSTEM 

dnl Project name and version
CVSVERS=`echo '$Name$' | sed 's/.*://;s/..$//'`
if test -z $CVSVERS; then
        CVSVERS=developer
fi
AM_INIT_AUTOMAKE(Ccd, $CVSVERS) 

dnl Checks for programs ==============================
AC_PROG_CXX
AC_PROG_CC
AC_PROG_F77
AC_SUBST(C_OPT)
case $build_os in
        linux* ) C_OPT=-DUNDER ;;
        aix* ) C_OPT= ;;
        solaris* ) C_OPT=-DUNDER;;
esac 
AC_PROG_GCC_TRADITIONAL
AC_PROG_AWK
AC_PROG_INSTALL
AC_PROG_RANLIB
dnl AM_PROG_LEX
AC_PROG_LN_S
AC_PROG_MAKE_SET
AC_F77_LIBRARY_LDFLAGS
                          
dnl Checks for libraries ==============================

dnl IFU_C_iolibs, > 6.0b ------------------------------
dnl : the problem is : only the dev version is working
dnl AC_HELP_STRING valid only for recent autoconfs

AC_MSG_CHECKING([for a valid IFU_C_iolibs])
AC_ARG_WITH(ifuciolibs, 
         [  --with-ifuciolibs=DIR       directory of IFU_C_iolibs ],
         [ac_ifuciolibs=$withval], 
         [ac_ifuciolibs=])
dnl If the user does not provide one, try to see if somthing acceptable is found
ac_ifuciolibs_vers_ok="6.0b++"
echo Wait !

if test -z "$ac_ifuciolibs"
then
    cwd=`pwd` 
    for ac_ifuciolibs_config in `ls $cwd/../IFU_C_iolibs*/configure.in $cwd/../E3D_io_LCL*/configure.in`
    do
        ac_ifuciolibs_vers=` grep 'INIT_AUTOMAKE(IFU_C_iolibs'  $ac_ifuciolibs_config  | sed 's%.*, *\(.*\) *)%\1%' `
        if test "$ac_ifuciolibs_vers" = "$ac_ifuciolibs_vers_ok"
        then
           if test -n "$ac_ifuciolibs"
           then
               AC_MSG_ERROR([Too much valid ../IFU_C_iolibs ... Specify one with --with-ifuciolibs])
           else
           [ac_ifuciolibs=`echo $ac_ifuciolibs_config | sed 's%/[^/]*$%%'`]
           fi
        fi
    done
    if test -z "$ac_ifuciolibs"
    then
        if test -z "$ac_ifuciolibs_vers"
        then
            AC_MSG_ERROR([No IFU_C_iolibs found. Use --with-ifuciolibs or mailto:gangler@ipnl.in2p3.fr])
        else
            AC_MSG_ERROR([Found only IFU_C_iolibs version $ac_ifuciolibs_vers, $ac_ifuciolibs_vers_ok is needed. Use --with-ifuciolibs or mailto:gangler@ipnl.in2p3.fr])
        fi
    else
        echo IFU_C_iolibs found :  $ac_ifuciolibs version is $ac_ifuciolibs_vers
    fi
fi
ac_ifuciolibs_vers=` grep 'INIT_AUTOMAKE(IFU_C_iolibs'  $ac_ifuciolibs/configure.in  | sed 's%.*, *\(.*\) *)%\1%' `
if test "$ac_ifuciolibs_vers" != "$ac_ifuciolibs_vers_ok"
then
    AC_MSG_ERROR([IFU_C_iolibs version $ac_ifuciolibs_vers found - you should use  $ac_ifuciolibs_vers_ok. Use --with-ifuciolibs or mailto:gangler@ipnl.in2p3.fr])
fi
LIBS="$LIBS -L$ac_ifuciolibs/C_libs/io/obj $ac_ifuciolibs/C_libs/obj/genlib.a"
AC_SUBST(ac_ifuciolibs)
AC_CHECK_LIB(io,open_frame,
        [LIBS="$LIBS -lio"
         C_OPT="$C_OPT -I$ac_ifuciolibs/incl"],
        [AC_MSG_ERROR(Unable to locate open_frame in $ac_ifuciolibs)],"-lm")

dnl checking now for the mathlibs -------------------------------------
dnl needed marginally for obscure technical reasons
AC_MSG_CHECKING([for IFU_C_mathlibs])
AC_ARG_WITH(ifucmathlibs, 
         [  --with-ifucmathlibs=DIR       directory of IFU_mathlibs ],
         [ac_ifucmathlibs=$withval], 
         [ac_ifucmathlibs=])
echo Wait !

dnl If the user does not provide one, try to see if somthing acceptable is found
if test -z "$ac_ifucmathlibs"
then
    cwd=`pwd` 
    if test `ls $cwd/../IFU_C_mathlibs*/configure.in | wc | awk '{print $1}'` -gt 1
    then
         AC_MSG_ERROR([Too much IFU_C_mathlibs in path ... specify one with --with-ifucmathlibs])
    else 
        if test `ls $cwd/../IFU_C_mathlibs*/configure.in | wc | awk '{print $1}'` -lt 1
        then
            AC_MSG_ERROR([No IFU_C_mathlibs in path ... specify one with --with-ifucmathlibs])
        else
            ac_ifucmathlibs=`ls $cwd/../IFU_C_mathlibs*/configure.in | sed s%/configure.in%%`
        fi
    fi
    echo IFU_C_mathlibs found :  $ac_ifucmathlibs    
fi
AC_SUBST(ac_ifucmathlibs)

dnl checking now for the GSL -----------------------------------------------

AC_MSG_CHECKING([for a GSL lib])
AC_ARG_WITH(gsl, 
         [  --with-gsl=DIR       directory of GSL ],
         [ac_gsl=$withval], 
         [ac_gsl=])
echo Wait !

dnl If the user does not provide one, try to see if somthing acceptable is found
if test -z "$ac_gsl"
then
    cwd=`pwd` 
    if test `ls -d $cwd/../IFU_C_mathlibs*/C_libs/gsl* | wc | awk '{print $1}'` -gt 1
    then
         AC_MSG_ERROR([Too much GSL libs in path ... specify one with --with-gsl])
    else 
        if test `ls -d $cwd/../IFU_C_mathlibs*/C_libs/gsl* | wc | awk '{print $1}'` -lt 1
        then
            AC_MSG_ERROR([No GSL libs in path ... specify one with --with-gsl])
        else
            ac_gsl=`ls -d $cwd/../IFU_C_mathlibs*/C_libs/gsl*`
        fi
    fi
    echo GSL lib found $ac_gsl    
fi
AC_SUBST(ac_gsl)

LIBS="$LIBS -L$ac_gsl/.libs"
AC_CHECK_LIB(gsl,gsl_stats_sd_m,
        [LIBS="$LIBS -lgsl"
         C_OPT="$C_OPT -I$ac_gsl"],
        [AC_MSG_ERROR(Unable to locate gsl_stats_sd_m in $ac_gsl)],
        [-L$ac_gsl/cblas/.libs -lgslcblas -lm])

dnl Checking for ROOT system -----------------------------
AC_MSG_CHECKING(for ROOT system)
if test -n "$ROOTSYS"
then
    PKG_ROOT=anal
    AC_MSG_RESULT($ROOTSYS)
else
    PKG_ROOT=
    AC_MSG_RESULT([No \$ROOTSYS])
fi
AC_SUBST(PKG_ROOT)
echo setting PKG_ROOT to $PKG_ROOT

dnl Checks for header files ==============================
AC_HEADER_STDC
AC_CHECK_HEADERS(malloc.h unistd.h)

dnl Checks for typedefs, structures, and compiler characteristics ==========
AC_HEADER_TIME

dnl Checks for library functions ==============================
AC_CHECK_FUNCS(select strerror strspn strstr)

dnl miscellanous checks 

dnl ctags
AC_CHECK_PROG(TAGS,ctags,ctags,no)
if test x$TAGS = xno; then
        AC_MSG_WARN([cannot create TAGS tables])
fi


dnl DEBUG mode ------------------------------
AC_SUBST(DEBUG)
AC_SUBST(STRIP)
AC_MSG_CHECKING(for DEBUG mode)
AC_ARG_ENABLE(debug,
        [  --enable-debug          DEBUG mode compilation - default is YES],
        [ac_debug=$withval],
        [ac_debug=yes]
)
if test "$ac_debug" = "yes"
then
  STRIP=strip
  DEBUG="-g -Wall"
else
  STRIP=@echo
fi
AC_MSG_RESULT($ac_debug)

dnl Output ==============================

AC_OUTPUT(add_defs/makedefs \
          Makefile \
          pkg/Makefile \
          pkg/preprocess/Makefile \
          pkg/preprocess/lib/makefile \
          pkg/preprocess/source/makefile \
          pkg/anal/Makefile \
          pkg/anal/source/makefile )

dnl Final configuration ==============================

dnl OUTPUT=`find . -name '?akefile.??'|sed 's|^\./||;s|\...$| \\\\|'|uniq|sort|sed '$s|\\\\$||'`

echo "
=============== EURO3D final configuration ===============
Project:        $PACKAGE
Version:        $VERSION

If all settings are OK, type:
   make                                to compile the project
   make DEBUG=\"-g -Wall\" STRIP=@echo   to compile in debug-mode
   make dist                           to create a stand-alone tarball
=========================================================="

