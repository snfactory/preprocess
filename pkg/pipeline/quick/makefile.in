topdir = @top_srcdir@
include $(topdir)/add_defs/makedefs
include $(topdir)/add_defs/makedefs.local

# ============================================================

# Targets

EXE = $(E)/quick_bias

# ============================================================

OUT : $(EXE)

# Shell-scripts
$(E)/% : %.sh
	install $< $(E)/$*


# Python-scripts
$(E)/% : %.py
	install $< $(E)/$*

clear:
	rm -f $(EXE)


makefile: makefile.in  $(topdir)/config.status
	cd $(topdir) \
	  && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= $(SHELL) ./config.status
