topdir = @top_srcdir@
include $(topdir)/add_defs/makedefs
include $(topdir)/add_defs/makedefs.local

# ============================================================

# Targets

FILES = biasmodel_B.txt\
        darkmodel_B.txt\
        biasmodel_R.txt\
        darkmodel_R.txt\
        bias_B.fits\
        dark_B.fits\
        bias_R.fits\
        dark_R.fits

DATA = $(topdir)/user/data

# ============================================================

OUT : dirdata $(DATA)/time-stamp

dirdata :
	@if [ ! -d $(DATA) ]; then \
		echo "Creating data directory $(DATA)"; \
		mkdir -p $(DATA); \
	fi

# Install w/ r--r--r-- permissions
$(DATA)/time-stamp : $(FILES) 
	touch $(DATA)/time-stamp
	install -m 444 $? $(DATA)

clean: 
	rm -f $(DATA)/time-stamp
