topdir = @top_srcdir@
top_builddir = $(topdir)
subdir = pkg/anal/lib
include $(topdir)/add_defs/makedefs
include $(topdir)/add_defs/makedefs.local

# ============================================================

# Targets

OBJ = $(O)/roothistos.o\
      $(O)/analimage.o\
      $(O)/dict.o\


LIB = $(O)/libanal.a 
SOLIB = $(O)/libanal.so 

# ============================================================

OUT : dirobj $(LIB) $(SOLIB)

# dictionnary
dict.cxx : ../incl/analimage.hxx ../incl/LinkDef.h
	rootcint -f dict.cxx -c ../incl/analimage.hxx ../incl/LinkDef.h && mv dict.h ../incl/

# Objects
$(O)/%.o : %.c $(STAND_INC) $(preprocess_INC) makefile
	$(C_COMPILE)

# Objects C++
$(O)/%.o : %.cxx $(STAND_INC) $(preprocess_INC) makefile
	$(CXX) $(DEBUG) $(CFLAGS) -I$(preprocess_INCDIR) -I$(ROOTINC) -c $< && mv $(@F) $@

# Library
$(LIB) : $(OBJ)
	$(AR) rv $(LIB) $(OBJ)
	$(RANLIB) $@

# Library
$(SOLIB) : $(OBJ)
	$(CXXLD) $(LDSOF) -o $(SOLIB) $(OBJ)


clear:
	rm -f $(OBJ) $(EXE)

makefile: makefile.in  $(top_builddir)/config.status
	cd $(top_builddir) \
	  && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= $(SHELL) ./config.status
