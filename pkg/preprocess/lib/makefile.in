topdir = @top_srcdir@
include $(topdir)/add_defs/makedefs
include $(topdir)/add_defs/makedefs.local

# ============================================================

# Targets

OBJ = $(O)/bichip.o\
	$(O)/image.o\
	$(O)/section.o\
	$(O)/utils.o \


LIB = $(O)/libpreprocess.a 

# ============================================================

OUT : dirobj $(LIB)       

# Objects
$(O)/%.o : %.c $(STAND_INC) $(preprocess_INC)
	$(C_COMPILE)

# Objects C++
$(O)/%.o : %.cxx $(STAND_INC) $(preprocess_INC)
	$(C_COMPILE)

# Library
$(LIB) : $(OBJ)
	$(AR) rv $(LIB) $(OBJ)
	$(RANLIB) $@

