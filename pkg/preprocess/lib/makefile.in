SRC = 	utils.c \

SRCC = bichip.cxx\
	catorfile.cxx\
	image.cxx \
	imagesnifs.cxx \
	section.cxx \
	sectionlist.cxx \
	analyser.cxx \
	ioplain.cxx \
	ioslice.cxx \
	imagestack.cxx \
	kombinator.cxx \
	kombinatorfit.cxx \
	imagestacksnifs.cxx \
	valuegetter.cxx \

OBJ = $(patsubst %.c, $(O)/%.o, $(SRC))  $(patsubst %.cxx, $(O)/%.o, $(SRCC))

LIB = $(O)/libpreprocess.a 

include make.depend

# ============================================================

OUT : dirobj $(LIB)

# make.depend added because : if a .h file changes included .h
# the .o is aware it has to be recompiled, but not the make.depend
# unless we invent every possible .h in order to put them in the 
# make.depend dependancies (not possible :-(

# Objects
$(O)/%.o : %.c $(STAND_INC)
	$(C_COMPILE)

# Objects C++
$(O)/%.o : %.cxx $(STAND_INC)
	$(CXXCOMPILE)

# Library
$(LIB) : $(OBJ) makefile
	$(AR) rv $(LIB) $(OBJ)
	$(RANLIB) $@

clear:
	rm -f $(OBJ) $(EXE)

makefile: makefile.in  $(top_builddir)/config.status
	cd $(top_builddir) \
	  && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= $(SHELL) ./config.status

make.depend: makefile $(SRC) $(SRCC)
	$(CC) -MM $(CFLAGS) -c $(SRC) $(SRCC) | sed 's%\(.*\)\.o[ :]*%$$(O)/\1.o make.depend :%' > make.depend
