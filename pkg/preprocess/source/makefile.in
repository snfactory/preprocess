topdir = @top_srcdir@
top_builddir = $(topdir)
subdir = pkg/preprocess/source
include $(topdir)/add_defs/makedefs
include $(topdir)/add_defs/makedefs.local

# ============================================================

# Local libraries

LOCLIB = $(O)/libpreprocess.a

# Targets

EXE = $(E)/substract_overscan\
	$(E)/substract_dark\
	$(E)/substract_flat\
	$(E)/build_flat\
	$(E)/add_poisson\
	$(E)/odd_even_correct\
	$(E)/bichip_assemble\
	$(E)/bichip_sub_bias\
	$(E)/bichip_overscan\
	$(E)/bichip_variance\
	$(E)/preprocess_bias\
	$(E)/preprocess_dark\
	$(E)/preprocess_flat\
	$(E)/preprocess\
	$(E)/rickify\
	$(E)/split_image\
	$(E)/quick_look\
	$(E)/fft_image\
	$(E)/copy_image\
	$(E)/test_extension\


# ============================================================

OUT : dirbin dirobj $(EXE)

# Objects
$(O)/%.o : %.c $(STAND_INC) $(preprocess_INC) makefile
	$(C_COMPILE)

# Objects C++
$(O)/%.o : %.cxx $(STAND_INC) $(preprocess_INC) makefile
	$(CXXCOMPILE)

# Executables (beware: the % syntax might not be standard)
$(E)/% : $(O)/%.o $(LOCLIB) $(IOLIB)
	$(CXXLINK)
	$(STRIP) $@


clear:
	rm -f $(OBJ) $(EXE)

makefile: makefile.in  $(top_builddir)/config.status
	cd $(top_builddir) \
	  && CONFIG_FILES=$(subdir)/$@ CONFIG_HEADERS= $(SHELL) ./config.status
